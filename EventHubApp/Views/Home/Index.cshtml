@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/style.css">



<div class="text-white text-center mb-4"
     style="width: 100vw;
            margin-left: calc(-50vw + 50%);
            overflow-x: hidden;
            background: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
                        url('https://www.socialtables.com/wp-content/uploads/2018/02/iStock-864292488.jpg') center/cover no-repeat;
            height: 65vh; border-radius: 0;">

    <div class="position-relative h-100">
        <div class="position-absolute top-50 start-50 translate-middle">
            <h1 class="display-1 fw-bolder text-white-50 text-uppercase" style="font-size: 6rem;">
                Welcome to <br> Event Hub!
            </h1>
            <p class="lead text-light fw-bolder fs-4">
                Discover the best events for your fun and entertainment.
            </p>
            <div class="mt-3">
                <a asp-area="" asp-controller="Event" asp-action="Index"
                   class="btn btn-outline-light fw-bold rounded-pill px-4 py-2 shadow-sm">
                    <i class="bi bi-film"></i> Browse Events
                </a>
            </div>
        </div>
    </div>
</div>




<div class="container my-5">
    <h2 class="text-center fw-bold mb-4 text-light">Popular Choices</h2>
    <div class="row">

        <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-3 bg-secondary mx-auto" style="max-width: 400px;">
                <div class="card-img text-center rounded-3" style="overflow: hidden;"> <img src="~/images/cocosBar.jpg" alt="Alternate Text class="img-fluid" style="width: 400px; height: 350px;" /> </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold text-light">Complex Cocos, Sofia</h5>
                    <p class="card-text text-light">Voted as the best Pool Bar experience this month!</p>
                    <small class="text-light">Over 10,000 visitors last month.</small>
                </div>
            </div>
        </div>

        <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-3 bg-secondary mx-auto" style="max-width: 400px;">
                <div class="card-img text-center rounded-3" style="overflow: hidden;"> <img src="~/images/liveFest.jpg" alt="Alternate Text class="img-fluid" style="width: 400px; height: 350px;" /> </div>
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold text-light">Sofia Live Fest 2025</h5>
                    <p class="card-text text-light">The epic event that everyone talking about!</p>
                    <small class="text-light">Over 12,000 visitors last month.</small>
                </div>
            </div>
        </div>
     </div>
</div>



